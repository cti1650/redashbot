{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "outDir": ".build",
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./",
    "lib": ["es2015", "dom"]
  },
  "include": ["api/*.ts", "src/*.ts", "*.ts"]
}
